{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "tabWidth": 2,
        "@typescript-eslint/explicit-function-return-type": [
            "error",
            {
            "allowExpressions": true
            }
            ],
        
        "singleQuote": true,
        "jsxSingleQuote": true
    }
}
