// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  rent Rent[]
}

model Rent {
  id Int @id @default(autoincrement())
  locals Locals[]
  locatedAt DateTime 
  devolutionTime DateTime 
  user User @relation(fields: [userId], references: [id])
  userId Int
  rentedCar Car @relation(fields: [carId], references: [id])
  carId Int @unique
}

model Car {
  id Int @id @default(autoincrement())
  name String
  model String
  doors Int
  color String
  type String
  carChange String
  hasAir Boolean
  rent Rent?
}

model Locals {
  id Int @id @default(autoincrement())
  aeroport1 String
  aeroport2 String
  aeroport3 String
  busStation String
  busStation2 String
  busStation3 String
  busStation4 String
  chosedLocal Rent @relation(fields: [localId], references: [id])
  localId Int

}